{
  "compilerOptions": {
    "rootDir": ".",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015", "ES5"],
    "baseUrl": "./src",
    "typeRoots": ["../node_modules/@types", "src/@types", "@types/jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true
  },
  "include": [
    "**/node_modules/*",
    "src",
    "lib.es5.d.ts",
    "craco.config.ts",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
